package gpj.singleton;

/**
 * 单例模式
 * 作用：保证整个应用程序中有些对象有一个就够了
 * @author gpj
 *
 */
public class Singleton {


	//1.将构造方法私有化
	private Singleton(){}
	
	//2.创建类的唯一实例
	private static Singleton instance = new Singleton();
	
	//3.提供一个用于获取实例的方法
	public static Singleton getInstance() {
		return instance;
	}
}
